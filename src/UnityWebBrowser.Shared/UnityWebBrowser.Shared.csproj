<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="../Imports/Properties.props" />
    
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>9</LangVersion>
        <AssemblyTitle>Unity Web Browser Shared</AssemblyTitle>
        <Description>Shared resources for Unity Web Browser engines and Unity</Description>
        <Configurations>Debug;Release;ReleaseUnity</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>
    
    <ItemGroup>
      <PackageReference Include="MessagePack" Version="2.3.58-alpha" />
      <PackageReference Include="MessagePack.MSBuild.Tasks" Version="2.3.58-alpha">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\ThirdParty\ClrZmq4\ZeroMQ.netcore.csproj" />
    </ItemGroup>
    
    <PropertyGroup>
        <MessagePackGeneratedResolverNamespace>UnityWebBrowser.Shared</MessagePackGeneratedResolverNamespace>
        <MessagePackGeneratedResolverName>UnityWebBrowserResolver</MessagePackGeneratedResolverName>
        <MessagePackGeneratedUsesMapMode>false</MessagePackGeneratedUsesMapMode>
    </PropertyGroup>

    <Target Condition="'$(Configuration)|$(Platform)'=='ReleaseUnity|AnyCPU'" Name="PostBuild" AfterTargets="PostBuildEvent">
        <Copy SourceFiles="$(OutputPath)$(AssemblyName).dll" DestinationFiles="../Packages/UnityWebBrowser/Plugins/$(AssemblyName).dll" />
        <Copy SourceFiles="$(OutputPath)ZeroMQ.dll" DestinationFiles="../Packages/UnityWebBrowser/Plugins/ZeroMQ.dll" />
        <Copy SourceFiles="../ThirdParty/Libs/zmq/windows64/libzmq.dll" DestinationFiles="../Packages/UnityWebBrowser/Plugins/win-x64/libzmq.dll" />
        <Copy SourceFiles="../ThirdParty/Libs/zmq/linux64/libzmq.so" DestinationFiles="../Packages/UnityWebBrowser/Plugins/linux-x64/libzmq.so" />
    </Target>

</Project>
